<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/baseline_component_unit"
    android:paddingBottom="@dimen/baseline_component_unit"
    android:paddingLeft="@dimen/baseline_content_left"
    android:paddingStart="@dimen/baseline_content_left"
    android:paddingRight="@dimen/baseline_content_unit"
    android:paddingEnd="@dimen/baseline_content_unit"
    android:background="@color/material_blue_primary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/typography_title"
        android:textStyle="bold"
        android:text="@string/episodes"
        android:id="@+id/chapterTitleTextView" />

</RelativeLayout>